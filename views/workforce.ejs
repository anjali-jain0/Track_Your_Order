<h1 class="head">Assign Workforce</h1>
<br>

<div class="container">  
<% if(data.length !=0)  { %>  
  <table class="table table-bordered">
    <thead>
      <% for(var i=0;i<data.length;i++) { %>
      <tr>
        <th>Country</th>
        <th>State</th>
        <th>City</th>
        <th>Locality</th>
        <th>Name</th>
         <th>Email</th>
        <th>Number</th>
        <th>Experience</th>
        <th>Availability</th>
      </tr>
    </thead>
        <tbody>
      <tr>
        <td><%= data[i].country %></td>
        <td><%= data[i].state %></td>
        <td><%= data[i].city %></td>
        <td><%= data[i].area %></td>
        <td><%= data[i].name %></td>
        <td><%= data[i].email %></td>
        <td><%= data[i].number %></td>
        <td><%= data[i].exp %></td>
        <td><%= data[i].avail %></td>
        <td><a href='/bookworkforce/<%= data[i].number %>'><button class='btn btn-success'>Book and send Sms</button></a>
        <td><a href='/bookworkforce/<%= data[i].email %>'><button class='btn btn-success'>Book and send mail</button></a></td>
        <!-- email and number of client ?? -->
        <!-- <td><a href='/clientsms/<%= data[i].name %>/<%= data[i].number %>'><button class='btn btn-info'>Sms to client</button></a></td> -->
        <td><a href='/clientmail/<%= data[i].name %>/<%= data[i].number %>'><button class='btn btn-info'>Mail to client</button></a></td>
        </tr>
      <% } %>
    </tbody>
  </table>
<% } else { %>
<h3>No workforce available</h3>
<% } %>
